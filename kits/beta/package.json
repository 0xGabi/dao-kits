{
  "name": "@aragon/kits-beta",
  "version": "1.1.3",
  "description": "Beta template for v0.5 Aragon orgs",
  "main": "index.js",
  "scripts": {
    "prepublish": "truffle compile && node scripts/extract-abis.js",
    "deploy:rinkeby": "truffle exec --network rinkeby scripts/deploy.js",
    "deploy:rpc": "truffle exec --network rpc scripts/deploy.js",
    "deploy:devnet": "truffle exec --network devnet scripts/deploy.js",
    "docker:wait-gas": "truffle exec scripts/sleep-until-gaslimit.js --network devnet 6900000",
    "docker:run": "docker-compose up -d",
    "lint": "solium --dir ./contracts",
    "test": "truffle compile && npm run docker:run && npm run docker:wait-gas && (export `grep ^OWNER .env`; ./scripts/deploy.sh)",
    "test:gas": "GAS_REPORTER=true npm test:local",
    "coverage": "./node_modules/@aragon/test-helpers/run-coverage.sh",
    "console": "node_modules/.bin/truffle console",
    "ganache-cli:dev": "./node_modules/@aragon/test-helpers/ganache-cli.sh",
    "ganache-cli:coverage": "SOLIDITY_COVERAGE=true npm run ganache-cli:dev"
  },
  "author": "Aragon Institution MTU <contact@aragon.one>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@aragon/id": "^1.2.5",
    "@aragon/test-helpers": "^1.0.0",
    "eth-ens-namehash": "^2.0.8",
    "eth-gas-reporter": "^0.1.1",
    "ethereumjs-abi": "^0.6.4",
    "ethereumjs-testrpc": "^6.0.2",
    "ganache-cli": "^6.0.3",
    "solidity-coverage": "0.5.8",
    "solidity-sha3": "^0.4.1",
    "solium": "^1.0.4",
    "truffle": "4.1.14",
    "truffle-hdwallet-provider": "0.0.3"
  },
  "dependencies": {
    "@aragon/os": "4.0.0-beta.2",
    "@aragon/apps-shared-minime": "^1.0.0",
    "@aragon/apps-shared-migrations": "^1.0.0",
    "@aragon/apps-voting": "^2.0.0-beta.1",
    "@aragon/apps-vault": "^3.0.0-beta.1",
    "@aragon/apps-finance": "^2.0.0-beta.1",
    "@aragon/apps-token-manager": "^2.0.0-beta.1"
  }
}
